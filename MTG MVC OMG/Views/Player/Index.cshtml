@model IEnumerable<MTG_MVC_OMG.Models.Player> 

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Players</h2>
        </div>

            <div class="col-6 text-right">
                <a asp-controller="Player" asp-action="Create" class="btn btn-primary">Add Player</a>
            </div>
    </div>

    <br /><br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Player Name
                    </th>
                    <th>
                        Preferred Format
                    </th>
                    <th>
                        Preferred Color
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var player in Model)
                {
                    <tr>
                        <td width="25%">@player.Name</td>
                        <td width="25%">@player.PreferredFormat</td>
                        <td width="25%">@player.PreferredColor</td>
                        <td width="25%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Player" asp-route-Id="@player.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Player" asp-route-Id="@player.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No players found</p>
    }
</div>
