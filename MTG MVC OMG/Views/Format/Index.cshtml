@model IEnumerable<MTG_MVC_OMG.Models.Format>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Formats</h2>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Format</th>
                    <th>Rules</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var format in Model)
                {
                    <tr>
                        <td width="50%">@format.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Formats exist</p>
    }
</div>